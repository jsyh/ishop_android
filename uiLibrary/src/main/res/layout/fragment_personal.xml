<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@mipmap/personal_bg"
                android:orientation="vertical">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:animateLayoutChanges="true">

                    <LinearLayout
                        android:id="@+id/mLayoutLoginRegister"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >

                            <TextView
                                android:id="@+id/mTextViewLoginRegister"
                                android:layout_width="103dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/personal_login_register_button_bg"
                                android:gravity="center"
                                android:text="登录/注册"
                                android:textColor="#ffffff"
                                android:textSize="14sp"/>

                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mLayoutUser"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.jsyh.shopping.uilibrary.views.CircleImageView
                            android:id="@+id/mCircleImageViewPhoto"
                            android:layout_width="62dp"
                            android:layout_height="62dp"
                            android:layout_marginLeft="35dp"
                            android:src="@mipmap/personal_photo"
                            />

                        <TextView
                            android:id="@+id/mTextViewUserName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:paddingLeft="12dp"
                            android:textColor="#ffffff"
                            android:textSize="15sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mLayoutSetup"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/mImageViewSetUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="23dp"
                            android:padding="12dp"
                            android:src="@mipmap/personal_setup"/>

                        <TextView
                            android:id="@+id/mTextViewSignIn"
                            android:layout_width="90dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginLeft="-10dp"
                            android:background="@mipmap/personal_sign_in_bg"
                            android:drawableRight="@mipmap/personal_sign_in"
                            android:gravity="center"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:text="签到"
                            android:textColor="#ffffff"
                            android:textSize="14sp"
                            android:visibility="gone"/>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:id="@+id/mLayoutRedPocket"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mTextViewRedPocket"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|bottom"
                            android:paddingBottom="3dp"
                            android:text="0"
                            android:textColor="#ffffff"

                            android:textSize="15sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.2"
                            android:gravity="center_horizontal"
                            android:text="我的红包"
                            android:textColor="#ffffff"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="20dp"
                        android:background="#ffffff"/>

                    <LinearLayout
                        android:id="@+id/mLayoutCredits"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mTextViewCredits"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|bottom"
                            android:paddingBottom="3dp"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textSize="15sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.2"
                            android:gravity="center_horizontal"
                            android:text="我的积分"
                            android:textColor="#ffffff"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="20dp"
                        android:background="#ffffff"/>

                    <LinearLayout
                        android:id="@+id/mLayoutBalance"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mTextViewBalance"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|bottom"
                            android:paddingBottom="3dp"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textSize="15sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.2"
                            android:gravity="center_horizontal"
                            android:text="我的余额"
                            android:textColor="#ffffff"
                            android:textSize="14sp"/>
                    </LinearLayout>

                </TableRow>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="#f2f2f2"/>

            <TableRow
                android:id="@+id/mTableRowTotalOrders"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="?android:selectableItemBackground"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/personal_total_orders"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="全部订单"
                    android:textColor="@color/main_text_color"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="12dp"
                    android:drawableRight="@mipmap/personal_arrow_go"
                    android:gravity="right"
                    android:paddingRight="12dp"
                    android:text="查看全部购买订单"
                    android:textColor="#999999"
                    android:textSize="12sp"/>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e5e5e5"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/mTextViewUnPaid"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="9dp"
                    android:layout_marginLeft="12dp"
                    android:drawablePadding="7dp"
                    android:drawableTop="@mipmap/personal_order_unpaid"
                    android:gravity="center_horizontal|bottom"
                    android:paddingTop="9dp"
                    android:text="待付款"
                    android:textColor="@color/main_text_color"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/mTextViewUnSend"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="9dp"
                    android:layout_weight="1"
                    android:drawablePadding="7dp"
                    android:drawableTop="@mipmap/personal_order_unsend"
                    android:gravity="center_horizontal|bottom"
                    android:paddingTop="9dp"
                    android:text="待发货"
                    android:textColor="@color/main_text_color"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/mTextViewUnReceived"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="9dp"
                    android:drawablePadding="7dp"
                    android:drawableTop="@mipmap/personal_order_unreceived"
                    android:gravity="center_horizontal|bottom"
                    android:paddingTop="9dp"
                    android:text="待收货"
                    android:textColor="@color/main_text_color"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/mTextViewUnComment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="9dp"
                    android:layout_weight="1"
                    android:drawablePadding="7dp"
                    android:drawableTop="@mipmap/personal_order_uncomment"
                    android:gravity="center_horizontal|bottom"
                    android:paddingTop="9dp"

                    android:text="待评价"
                    android:textColor="@color/main_text_color"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/mTextViewService"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="9dp"
                    android:layout_marginRight="12dp"
                    android:drawablePadding="7dp"
                    android:drawableTop="@mipmap/personal_order_service"
                    android:gravity="center_horizontal|bottom"
                    android:paddingTop="9dp"
                    android:text="退款/售后"
                    android:textColor="@color/main_text_color"
                    android:textSize="12sp"/>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#dbdbdb"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="#f2f2f2"/>

            <TableRow
                android:id="@+id/mTableRowCollectedGoods"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="?android:selectableItemBackground"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/personal_collected_goods"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="收藏的商品"
                    android:textColor="@color/main_text_color"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/mTextViewCollectedGoods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="12dp"
                    android:drawableRight="@mipmap/personal_arrow_go"
                    android:gravity="right"
                    android:paddingRight="12dp"
                    android:text="0"
                    android:textColor="#999999"
                    android:textSize="12sp"/>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#f2f2f2"/>

            <TableRow
                android:id="@+id/mTableRowCollectedShops"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="?android:selectableItemBackground"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/personal_collected_shops"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="关注的店铺"
                    android:textColor="@color/main_text_color"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/mTextViewCollectedShops"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="12dp"
                    android:drawableRight="@mipmap/personal_arrow_go"
                    android:gravity="right"
                    android:paddingRight="12dp"
                    android:text="0"
                    android:textColor="#999999"
                    android:textSize="12sp"/>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#dbdbdb"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="#f2f2f2"/>

            <TableRow
                android:id="@+id/mTableRowAddress"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="?android:selectableItemBackground"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/personal_address_manager"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="地址管理"
                    android:textColor="@color/main_text_color"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="12dp"
                    android:drawableRight="@mipmap/personal_arrow_go"
                    android:gravity="right"
                    android:paddingRight="12dp"
                    android:textColor="#999999"
                    android:textSize="12sp"/>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#dbdbdb"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="#f2f2f2"/>

            <TableRow
                android:id="@+id/mTableRowComments"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="?android:selectableItemBackground"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/personal_my_comments"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="我的评价"
                    android:textColor="@color/main_text_color"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="12dp"
                    android:drawableRight="@mipmap/personal_arrow_go"
                    android:gravity="right"
                    android:paddingRight="12dp"
                    android:textColor="#999999"
                    android:textSize="12sp"/>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#f2f2f2"/>

            <TableRow
                android:id="@+id/mTableRowShare"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="?android:selectableItemBackground"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/personal_my_share"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="我的分享"
                    android:textColor="@color/main_text_color"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="12dp"
                    android:drawableRight="@mipmap/personal_arrow_go"
                    android:gravity="right"
                    android:paddingRight="12dp"
                    android:textColor="#999999"
                    android:textSize="12sp"/>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#dbdbdb"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="#f2f2f2"/>

            <TableRow
                android:id="@+id/mTableRowHelp"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="?android:selectableItemBackground"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/personal_help"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="帮助与反馈"
                    android:textColor="@color/main_text_color"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="12dp"
                    android:drawableRight="@mipmap/personal_arrow_go"
                    android:gravity="right"
                    android:paddingRight="12dp"
                    android:textColor="#999999"
                    android:textSize="12sp"/>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#f2f2f2"/>

            <TableRow
                android:id="@+id/mTableRowAbout"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="?android:selectableItemBackground"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/personal_about"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="关于"
                    android:textColor="@color/main_text_color"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="12dp"
                    android:drawableRight="@mipmap/personal_arrow_go"
                    android:gravity="right"
                    android:paddingRight="12dp"
                    android:textColor="#999999"
                    android:textSize="12sp"/>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#dbdbdb"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="#f2f2f2"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>