<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#f2f2f2"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:id="@+id/mTextViewShopName"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:drawableLeft="@mipmap/shop_cart_shop_photo"
            android:drawablePadding="12dp"
            android:drawableRight="@mipmap/personal_arrow_go"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"/>

        <TextView
            android:id="@+id/mTextViewOrderStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="12dp"
            android:gravity="center_vertical|right"
            android:paddingRight="12dp"
            android:textColor="@color/main_text_selected_color"
            android:textSize="14sp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#f2f2f2"
        android:paddingLeft="12dp">

        <ImageView
            android:id="@+id/mImageViewGoodsPic"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="6dp"
            android:src="@mipmap/goods_detail_shop_photo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/mTextViewGoodsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:maxLines="2"
                android:textColor="@color/main_text_color"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/mTextViewGoodsType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingExtra="3dp"
                android:maxLines="2"
                android:textColor="#999999"
                android:textSize="12sp"/>

        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="交易金额"/>

        <TextView
            android:id="@+id/mTextViewDealTotal"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="退款金额"/>

        <TextView
            android:id="@+id/mTextViewReturnTotal"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:textColor="#ff5000"/>
    </TableRow>

    <LinearLayout
        android:id="@+id/mLayoutBottomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dbdbdb"/>

        <TableRow
            android:id="@+id/mTableRowBottomButton"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#ffffff"
            android:gravity="right|center_vertical">

            <Button
                android:id="@+id/mButton1"
                android:layout_width="100dp"
                android:layout_height="27dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/order_button_bg_shape"
                android:gravity="center"
                android:text="填写物流单号"
                android:textColor="#656973"
                android:textSize="14sp"
                />

            <Button
                android:id="@+id/mButton2"
                android:layout_width="75dp"
                android:layout_height="27dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/order_button_bg_shape_red"
                android:gravity="center"
                android:text="取消退款"
                android:textColor="#ff5000"
                android:textSize="14sp"
                />
        </TableRow>
    </LinearLayout>
</LinearLayout>
