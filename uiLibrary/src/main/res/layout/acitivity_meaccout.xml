<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/lineLayMain"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f2f2f2"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlAvatr"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:background="@android:color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    style="@style/account_text_style"
                    android:text="头像"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.jsyh.shopping.uilibrary.views.CircleImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginRight="12dp"
                        android:src="@mipmap/personal_info_change_photo"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/personal_arrow_go"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#f2f2f2"/>

            <RelativeLayout
                android:id="@+id/rlUserName"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:background="@android:color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    style="@style/account_text_style"
                    android:text="昵称"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:text="暂无"
                        android:textColor="#999999"
                        android:textSize="15sp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/personal_arrow_go"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#f2f2f2"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:background="@android:color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    style="@style/account_text_style"
                    android:text="用户名"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:text="656743655@qq.com"
                        android:textColor="#999999"
                        android:textSize="15sp"
                        />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#f2f2f2"/>

            <RelativeLayout
                android:id="@+id/rlSex"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:background="@android:color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    style="@style/account_text_style"
                    android:text="性别"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtSex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:text="女"
                        android:textColor="#999999"
                        android:textSize="15sp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/personal_arrow_go"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#f2f2f2"/>

            <RelativeLayout
                android:id="@+id/rlBirthday"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:background="@android:color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    style="@style/account_text_style"
                    android:text="出生日期"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtBirthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:text="1990.01.01"
                        android:textColor="#999999"
                        android:textSize="15sp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/personal_arrow_go"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#f2f2f2"/>

            <RelativeLayout
                android:id="@+id/rlChangePassword"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:background="@android:color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    style="@style/account_text_style"
                    android:text="修改密码"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/personal_arrow_go"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
