<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff"
              android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="44dp">


        <TextView
            android:id="@+id/mTextViewShopName"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:drawableLeft="@mipmap/shop_cart_shop_photo"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="飞亚达手表"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/mTextViewOrderStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="12dp"
            android:drawableRight="@mipmap/personal_arrow_go"
            android:gravity="center_vertical|right"
            android:paddingRight="12dp"
            android:text="卖家已发货"
            android:textColor="@color/main_text_selected_color"
            android:textSize="14sp"/>
    </TableRow>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerViewOrderGoodsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/mTextViewGoodsNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingLeft="12dp"
            android:text="共一件商品"
            android:textColor="@color/main_text_color"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="合计:"
            android:textColor="@color/main_text_color"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/mTextViewTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="￥62.0"
            android:textColor="@color/main_text_color"
            android:textSize="15sp"
            />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e5e5e5"/>

    <TableRow
        android:id="@+id/mTableRowBottomButton"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#ffffff"
        android:gravity="right|center_vertical">

        <Button
            android:id="@+id/mButton1"
            android:layout_width="75dp"
            android:layout_height="27dp"
            android:background="@drawable/order_button_bg_shape"
            android:gravity="center"
            android:text="联系卖家"
            android:textColor="#656973"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/mButton2"
            android:layout_width="75dp"
            android:layout_height="27dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/order_button_bg_shape"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="#656973"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/mButton3"
            android:layout_width="75dp"
            android:layout_height="27dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/order_button_bg_shape"
            android:gravity="center"
            android:text="付款"
            android:textColor="#656973"
            android:textSize="14sp"
            />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dbdbdb"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#f2f2f2"/>
</LinearLayout>