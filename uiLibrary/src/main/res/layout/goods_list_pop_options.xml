<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:text="价格区间（元）"
            android:textColor="@color/main_text_color"/>

        <EditText
            android:id="@+id/mEditTextMin"
            android:layout_width="90dp"
            android:layout_height="21dp"
            android:background="@drawable/no_select_shape_icon"
            android:gravity="center"
            android:text="999.0"
            android:textColorHint="#b2b2b2"
            android:textSize="12sp"/>

        <View
            android:layout_width="10dp"
            android:layout_height="0.5dp"
            android:layout_margin="6dp"
            android:background="#43464c"/>

        <EditText
            android:id="@+id/mEditTextMax"
            android:layout_width="90dp"
            android:layout_height="21dp"
            android:background="@drawable/no_select_shape_icon"
            android:gravity="center"
            android:text="999.0"
            android:textColorHint="#b2b2b2"
            android:textSize="12sp"/>
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="18dp"
        android:background="#dbdbdb"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:text="折扣和服务"
        android:textColor="@color/main_text_color"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <CheckBox
            android:id="@+id/mCheckBox1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@drawable/goods_list_options_checkbox_bg"
            android:paddingBottom="18dp"
            android:paddingLeft="12dp"
            android:paddingTop="15dp"
            android:text="免运费"
            android:textColor="@color/main_text_color"
            android:textSize="12sp"/>

        <CheckBox
            android:id="@+id/mCheckBox2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@drawable/goods_list_options_checkbox_bg"
            android:paddingBottom="18dp"
            android:paddingLeft="12dp"
            android:paddingTop="15dp"
            android:text="促销"
            android:textColor="@color/main_text_color"
            android:textSize="12sp"/>

        <CheckBox
            android:id="@+id/mCheckBox3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:button="@drawable/goods_list_options_checkbox_bg"
            android:paddingBottom="18dp"
            android:paddingLeft="12dp"
            android:paddingTop="15dp"
            android:text="货到付款"
            android:textColor="@color/main_text_color"
            android:textSize="12sp"/>
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dbdbdb"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="18dp"
            android:paddingLeft="12dp"
            android:text="商品分类："
            android:textColor="@color/main_text_color"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="18dp"
            android:layout_weight="100"
            android:paddingLeft="12dp"
            android:text="所有分类"
            android:textColor="@color/main_text_selected_color"/>

        <ImageView
            android:id="@+id/mImageViewAllCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:scaleType="centerInside"
            android:src="@mipmap/goods_list_options_arrow"/>
    </TableRow>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerViewCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="18dp"
        android:paddingLeft="12dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dbdbdb"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/mButtonClear"
            android:layout_width="109dp"
            android:layout_height="21dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/goods_detail_comment_shape"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/main_text_selected_color"/>
    </TableRow>

    <Button
        android:id="@+id/mButtonConfirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_text_selected_color"
        android:gravity="center"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="16sp"/>
</LinearLayout>