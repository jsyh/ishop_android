<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="88dp"
              android:background="#f2f2f2"
              android:focusable="false"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="12dp">

        <ImageView
            android:id="@+id/mImageViewGoodsPic"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="6dp"
            android:src="@mipmap/goods_detail_shop_photo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/mTextViewGoodsName"
                    android:layout_width="0dp"

                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="3"
                    android:ellipsize="end"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="2"
                    android:text="亚达手表2015款新款机械男表亚达手表2015款新款机械男表亚达手表2015款新款机械男表亚达手表2015款新款机械男表亚达手表2015款新款机械男表"
                    android:textColor="@color/main_text_color"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/mTextViewGoodsPrice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:includeFontPadding="false"
                    android:paddingRight="12dp"
                    android:text="￥66.80"
                    android:textColor="@color/main_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/mTextViewGoodsType"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:layout_weight="3"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="2"
                    android:text="颜色：卡其色"
                    android:textColor="#999999"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/mTextViewGoodsNum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:includeFontPadding="false"
                    android:paddingRight="12dp"
                    android:text="X 1"
                    android:textColor="#9b9b9b"
                    android:textSize="12sp"/>
            </TableRow>
        </LinearLayout>
    </TableRow>
</LinearLayout>