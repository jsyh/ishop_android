<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff"
              android:orientation="vertical">


    <TextView
        android:id="@+id/mTextViewShopName"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:drawableLeft="@mipmap/shop_cart_shop_photo"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="飞亚达手表"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerViewCartShopsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dbdbdb"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="配送方式"
            android:textColor="@color/main_text_color"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/mTextViewPeisong"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="包邮"
            android:textColor="@color/main_text_color"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/mTextViewPeisongPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="免运费"
            android:textColor="@color/main_text_color"
            android:textSize="15sp"
            />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#e5e5e5"/>

    <!--<TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="买家留言："
            android:textColor="@color/main_text_color"
            android:textSize="15sp"
            />

        <EditText
            android:id="@+id/mEditTextMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:hint="选填，可填写您和卖家达成一致的要求"
            android:lineSpacingExtra="6dp"
            android:minHeight="46dp"
            android:paddingRight="12dp"
            android:textColor="@color/main_text_color"
            android:textColorHint="#999999"
            android:textSize="15sp"
            />

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#e5e5e5"/>-->

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="right">

        <TextView
            android:id="@+id/mTextViewGoodsNum"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:text="共一件商品  使用积分："
            android:textColor="@color/main_text_color"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/mTextViewTotal"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:paddingRight="12dp"
            android:textColor="@color/main_text_selected_color"
            android:textSize="15sp"
            />

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dbdbdb"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#f2f2f2"/>
</LinearLayout>