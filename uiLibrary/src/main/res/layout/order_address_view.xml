<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/order_address_bg"
    android:orientation="vertical">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/rainbow"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtName"
            style="@style/account_text_style"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/ic_order_head"
            android:drawablePadding="5dp"/>
        <TextView
            android:id="@+id/txtPhone"
            style="@style/account_text_style"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/ic_order_phone"
            android:drawablePadding="5dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="16dp"
        android:textColor="@color/gary_text"/>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/rainbow"/>
</LinearLayout>