<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="66dp">

            <ImageView
                android:id="@+id/mImageViewCommentGoodsPic"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:src="@mipmap/goods_detail_shop_photo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mTextViewCommentGoodsName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:lines="1"
                    android:paddingRight="12dp"
                    android:text="商品详细六级考试地方就算了到付款进方就算了到付款进来速来速度"
                    android:textColor="@color/main_text_color"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/mTextViewCommentRank"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="已好评"
                    android:textColor="@color/main_text_selected_color"
                    android:textSize="10sp"/>
            </LinearLayout>
        </TableRow>

        <TextView
            android:id="@+id/mTextViewCommentContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="商品很满意，下次还会再来"
            android:textColor="@color/main_text_color"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/mTextViewCommentTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="2016-03-02 颜色分类：白色"
            android:textColor="#999999"
            android:textSize="10sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e5e5e5"/>
</LinearLayout>