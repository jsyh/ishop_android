<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f2f2f2"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/mImageViewEmpty"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:src="@mipmap/personal_collect_empty_goods"/>

    <TextView
        android:id="@+id/mTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="您的收藏夹是空的"
        android:textColor="@color/main_text_color"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/mTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="暂时没有相关数据"
        android:textColor="#666666"
        android:textSize="13sp"/>

    <Button
        android:id="@+id/mButtonToCollect"
        android:layout_width="136dp"
        android:layout_height="33dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shop_cart_button_bg_shape"
        android:text="看看关注"
        android:textColor="#666666"
        android:textSize="14sp"
        android:visibility="gone"/>
</LinearLayout>