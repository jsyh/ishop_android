<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ClearEditText">
        <!-- 清除按钮的图标 -->
        <attr name="iconClear" format="reference" />
    </declare-styleable>

    <declare-styleable name="FloatingActionButton">
        <attr name="fab_colorPressed" format="color" />
        <attr name="fab_colorNormal" format="color" />
        <attr name="fab_colorRipple" format="color" />
        <attr name="fab_colorDisabled" format="color" />
        <attr name="fab_shadow" format="boolean" />
        <attr name="fab_type" format="enum">
            <enum name="normal" value="0" />
            <enum name="mini" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CircleIndicator">
        <attr name="ci_width_u" format="dimension" />
        <attr name="ci_height_u" format="dimension" />
        <attr name="ci_margin_u" format="dimension" />
        <attr name="ci_animator_u" format="reference" />
        <attr name="ci_animator_reverse_u" format="reference" />
        <attr name="ci_drawable_u" format="reference" />
        <attr name="ci_drawable_unselected_u" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
</resources>